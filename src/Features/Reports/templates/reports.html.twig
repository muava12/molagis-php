{% extends 'base.html.twig' %}

{% block title %}{{ title | default('Reports & Analytics') }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/app/reports.css?v={{ 'now'|date('U') }}">
  <!-- Flatpickr CSS - same as orders page -->
  <link rel="stylesheet" href="/css/flatpickr.min.css">
  <!-- Flatpickr plugins CSS -->
  <link rel="stylesheet" href="/css/flatpickr-plugins/monthSelect.css?v={{ 'now'|date('U') }}">
{% endblock %}

{% block content %}
<div class="page-wrapper">
  <!-- Page title -->
  <div class="page-header d-print-none">
    <div class="container-xl">
      <div class="row align-items-center">
        <div class="col"><h2 class="page-title">Reports & Analytics</h2>
          <div class="text-muted mt-1">
            {% if reports_data.period_info is defined %}
              {{ reports_data.period_info.description }}
            {% else %}
              Ringkasan data dan statistik bisnis
            {% endif %}
            <span id="state-indicator" class="badge bg-success-lt ms-2 d-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm me-1" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M5 12l5 5l10 -10"/>
              </svg>
              Filter dipulihkan
            </span>
          </div>
        </div>
        <div class="col-auto ms-auto d-print-none">
          <div class="d-flex align-items-center gap-2">
            <!-- Date Navigation & Input (Desktop) -->
            <div class="d-none d-md-flex align-items-center gap-2">
              <!-- Navigation Buttons -->
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline btn-icon" id="period-nav-prev" title="Periode sebelumnya">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M15 6l-6 6l6 6"/>
                  </svg>
                </button>
                <button type="button" class="btn btn-outline btn-icon" id="period-nav-today" title="Periode saat ini">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                </button>
                <button type="button" class="btn btn-outline btn-icon" id="period-nav-next" title="Periode selanjutnya">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M9 6l6 6l-6 6"/>
                  </svg>
                </button>
              </div>

              <!-- Search Input Layout -->
              <div class="row g-2">
                <div class="col">
                  <div class="input-icon" style="min-width: 200px;">
                    <input type="text" id="period-input" class="form-control" placeholder="Pilih periode..." readonly>
                    <span class="input-icon-addon">
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"/>
                        <path d="M16 3v4"/>
                        <path d="M8 3v4"/>
                        <path d="M4 11h16"/>
                      </svg>
                    </span>
                  </div>
                </div>
                <div class="col-auto">
                  <button class="btn" type="button" id="apply-period-btn" title="Terapkan filter periode">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                      <path d="M21 21l-6 -6"/>
                    </svg>
                    <span class="btn-text d-none d-lg-inline">Search</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                  </button>
                </div>
              </div>
            </div>

            <!-- Mobile Layout -->
            <div class="d-md-none">
              <div class="input-group" style="min-width: 200px;">
                <input type="text" id="period-input-mobile" class="form-control" placeholder="Pilih periode..." readonly>
                <button class="btn btn-primary" type="button" id="apply-period-btn-mobile" title="Terapkan filter periode">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                    <path d="M21 21l-6 -6"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Period Type Dropdown -->
            <div class="dropdown">
              <button class="btn btn-outline dropdown-toggle" type="button" id="period-type-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"/>
                  <path d="M16 3v4"/>
                  <path d="M8 3v4"/>
                  <path d="M4 11h16"/>
                </svg>
                <span id="period-type-label">Monthly</span>
              </button>
              <ul class="dropdown-menu">
                <li><h6 class="dropdown-header">Tipe Periode</h6></li>
                <li><a class="dropdown-item period-type-option" href="#" data-period="monthly">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <rect x="4" y="5" width="16" height="16" rx="2"/>
                    <line x1="16" y1="3" x2="16" y2="7"/>
                    <line x1="8" y1="3" x2="8" y2="7"/>
                    <line x1="4" y1="11" x2="20" y2="11"/>
                  </svg>
                  Monthly
                  <small class="text-muted d-block">Pilih bulan</small>
                </a></li>
                <li><a class="dropdown-item period-type-option" href="#" data-period="weekly">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12,6 12,12 16,14"/>
                  </svg>
                  Weekly
                  <small class="text-muted d-block">Pilih minggu (Senin-Minggu)</small>
                </a></li>
                <li><a class="dropdown-item period-type-option" href="#" data-period="custom">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <rect x="4" y="5" width="16" height="16" rx="2"/>
                    <line x1="16" y1="3" x2="16" y2="7"/>
                    <line x1="8" y1="3" x2="8" y2="7"/>
                    <line x1="4" y1="11" x2="20" y2="11"/>
                    <path d="M11 15h1v4h1"/>
                  </svg>
                  Custom Range
                  <small class="text-muted d-block">Pilih rentang tanggal</small>
                </a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#" id="reset-filter-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"/>
                    <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"/>
                  </svg>
                  Reset Filter
                  <small class="text-muted d-block">Hapus filter tersimpan</small>
                </a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

  <div class="page-body">
    <div class="container-xl">
      <!-- Error Alert -->
      {% if error %}
        <div class="alert alert-danger alert-dismissible" role="alert">
          <div class="alert-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon">
              <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
              <path d="M12 8v4"></path>
              <path d="M12 16h.01"></path>
            </svg>
          </div>
          <div>
            <h4 class="alert-heading">Koneksi bermasalah 🫤</h4>
            <div class="alert-description">{{ error }}</div>
          </div>
          <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
        </div>
      {% endif %}

      <!-- Overview Cards -->
      <div class="row row-cards mb-4">
        {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
          <!-- Full Access Cards (Owner) -->
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Total Orders</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2 blur-target">{{ reports_data.total_orders | default(0) }}</div>
                  <div class="me-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      8%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17l6 -6l4 4l8 -8"/>
                        <path d="M14 7l7 0l0 7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Total Revenue</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2 blur-target">Rp {{ reports_data.total_revenue | default(0) | number_format(0, ',', '.') }}</div>
                  <div class="me-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      12%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17l6 -6l4 4l8 -8"/>
                        <path d="M14 7l7 0l0 7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="subheader">Active Customers</div>
                <div class="ms-auto lh-1">
                  <div class="dropdown">
                    <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                    <div class="dropdown-menu dropdown-menu-end">
                      <a class="dropdown-item active" href="#">Last 7 days</a>
                      <a class="dropdown-item" href="#">Last 30 days</a>
                      <a class="dropdown-item" href="#">Last 3 months</a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="d-flex align-items-baseline">
                <div class="h1 mb-0 me-2 blur-target">{{ reports_data.active_customers | default(0) }}</div>
                <div class="me-auto">
                  <span class="text-green d-inline-flex align-items-center lh-1">
                    5%
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 17l6 -6l4 4l8 -8"/>
                      <path d="M14 7l7 0l0 7"/>
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>

        {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Average Order Value</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2 blur-target">Rp {{ reports_data.average_order_value | default(0) | number_format(0, ',', '.') }}</div>
                  <div class="me-auto">
                    <span class="text-red d-inline-flex align-items-center lh-1">
                      -2%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 7l6 6l4 -4l8 8"/>
                        <path d="M14 17l7 0l0 -7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Role-based Access Divider -->
      {% if reports_data.access_level is defined and reports_data.access_level == 'limited' %}
        <div class="row">
          <div class="col-12">
            <div class="alert alert-info" role="alert">
              <div class="alert-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 16v-4"></path>
                  <path d="M12 8h.01"></path>
                </svg>
              </div>
              <div>
                <h4 class="alert-heading">Akses Terbatas</h4>
                <div class="alert-description">Anda memiliki akses terbatas ke data reports. Hubungi owner untuk akses penuh.</div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}

      <!-- Financial Overview Section -->
      {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
      <div class="row mb-4">
        <div class="col-12 col-md-8">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12"/>
                  <path d="M20 12v4h-4a2 2 0 0 1 0 -4h4"/>
                </svg>
                Overview Keuangan
              </h3>
              <div class="card-actions">
                <button class="btn btn-sm me-2" id="copyMarkdownBtn" title="Copy as Markdown">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                  </svg>
                  <span class="d-sm-none d-lg-inline">Copy MD</span>
                </button>
                <span class="badge rounded-pill">📅 Periode: {{ reports_data.period_info.description | default('Semua Waktu') }}</span>
              </div>
            </div>
            <div class="card-body p-2">

              <!-- Revenue Section -->
              <div class="mb-3" data-section="revenue">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-success-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 3v18h18"/>
                      <path d="M9 9l4 4l4 -4"/>
                    </svg>
                  </span>
                  Pendapatan (Revenue)
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🍱 Pendapatan Catering Harian
                    </span>
                    <strong class="text-success">
                      Rp {{ reports_data.financial_overview.product_revenue | default(8000000) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🚚 Pendapatan Jasa Kirim (Ongkir)
                    </span>
                    <strong class="text-info">
                      Rp {{ reports_data.financial_overview.delivery_revenue | default(1500000) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                </ul>
                <div class="d-flex justify-content-between align-items-center p-3 rounded mt-2 border">
                  <strong class="h5 mb-0">💰 Total Pendapatan</strong>
                  <strong class="mb-0">Rp {{ reports_data.financial_overview.total_revenue | default(9500000) | number_format(0, ',', '.') }}</strong>
                </div>
                <ul class="list-group list-group-flush d-none">
                </ul>
              </div>

              <!-- COGS Section -->
              <div class="mb-3" data-section="cogs">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-orange-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 3v18h18"/>
                      <path d="M21 9l-4 4l-4 -4"/>
                    </svg>
                  </span>
                  Biaya Pokok Penjualan (COGS)
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🏭 Modal Catering Harian
                    </span>
                    <span class="text-orange">
                      Rp {{ reports_data.financial_overview.product_cost | default(3600000) | number_format(0, ',', '.') }}
                    </span>
                  </li>
                </ul>
              </div>

              <!-- Gross Profit Section -->
              <div class="mb-3" data-section="gross-profit">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-blue-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <circle cx="12" cy="12" r="9"/>
                      <path d="M9 12l2 2l4 -4"/>
                    </svg>
                  </span>
                  Laba Kotor Catering Harian
                </h4>
                <div class="text-muted small mb-2 ms-5">
                  <span class="badge bg-secondary-lt text-wrap">📊 Pendapatan Catering Harian - Modal Produk</span>
                </div>
                <div class="d-flex justify-content-between align-items-center p-3 rounded">
                  <div>
                    <strong class="h5 mb-0">💎 Laba Kotor Catering</strong>
                    <br><small class="text-muted">📈 Margin: {{ reports_data.financial_overview.gross_margin | default(55) }}%</small>
                  </div>
                  <strong class="h4 mb-0">Rp {{ reports_data.financial_overview.gross_profit | default(4400000) | number_format(0, ',', '.') }}</strong>
                </div>
              </div>

              <!-- Operating Expenses Section -->
              <div class="mb-3" data-section="operating-expenses">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-red-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12"/>
                      <path d="M20 12v4h-4a2 2 0 0 1 0 -4h4"/>
                    </svg>
                  </span>
                  Biaya Operasional (Operating Expenses)
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🛵 Beban Jasa Kirim (Fee Kurir)
                    </span>
                    <span class="text-muted">
                      Rp {{ reports_data.financial_overview.delivery_cost | default(1350000) | number_format(0, ',', '.') }}
                    </span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🏢 Pengeluaran Operasional Lain
                      <small class="text-muted d-block ms-3">Gaji, Listrik, Sewa, dll</small>
                    </span>
                    <span class="text-muted">
                      Rp {{ reports_data.financial_overview.other_expenses | default(1500000) | number_format(0, ',', '.') }}
                    </span>
                  </li>
                </ul>
                <div class="d-flex justify-content-between align-items-center p-3 rounded mt-2 border">
                  <strong class="h6 mb-0">💸 Total Biaya Operasional</strong>
                  <strong class="mb-0">Rp {{ reports_data.financial_overview.total_operating_expenses | default(2850000) | number_format(0, ',', '.') }}</strong>
                </div>
              </div>

              <!-- Net Profit Breakdown Section -->
              <div class="mb-3" data-section="net-profit-breakdown">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-purple-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <rect x="3" y="3" width="18" height="18" rx="2"/>
                      <path d="M9 9h6v6h-6z"/>
                    </svg>
                  </span>
                  Rincian Laba Bersih per Lini Bisnis
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🍱 Laba Catering Harian
                      <small class="text-muted d-block ms-3">
                        <span class="badge bg-secondary-lt text-wrap">Laba bersih catering harian - biaya operasional</span>
                      </small>
                    </span>
                    <strong class="text-success">
                      Rp {{ reports_data.financial_overview.net_product_profit | default(4400000) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🎉 Laba Catering Event
                      <small class="text-muted d-block ms-3">
                        <span class="badge bg-secondary-lt text-wrap">Laba dari Event Catering</span>
                      </small>
                    </span>
                    <strong class="text-warning">
                      Rp {{ reports_data.financial_overview.event_catering_profit | default(0) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🚚 Laba Bersih Pengiriman
                      <small class="text-muted d-block ms-3">
                        <span class="badge bg-secondary-lt text-wrap">Revenue Ongkir - Biaya Delivery</span>
                      </small>
                    </span>
                    <strong class="text-info">
                      Rp {{ reports_data.financial_overview.net_delivery_profit | default(150000) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                </ul>
              </div>

              <!-- Net Profit Section -->
              <div data-section="net-profit">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-teal-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M12 6l4 6l5 -4l-2 10h-14l-2 -10l5 4z"/>
                    </svg>
                  </span>
                  Laba Bersih Total (Net Profit)
                </h4>
                <div class="text-muted small mb-2 ms-5">
                  <span class="badge bg-secondary-lt text-wrap">🧮 Laba Catering Harian + Laba Event + Laba Pengiriman</span>
                </div>
                <div class="d-flex justify-content-between align-items-center p-3 rounded border border-2">
                  <div>
                    <strong class="h4 mb-0">🏆 Laba Bersih Total</strong>
                    <br><small class="text-muted">📊 Margin: {{ reports_data.financial_overview.net_margin | default(16.3) }}%</small>
                  </div>
                  <strong class="h3 mb-0">Rp {{ reports_data.financial_overview.net_profit | default(1550000) | number_format(0, ',', '.') }}</strong>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      {% endif %}

      <!-- Customer Order Details Section -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"/>
                  <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                  <path d="M21 21v-2a4 4 0 0 0 -3 -3.85"/>
                </svg>
                Rincian Pesanan per Customer
              </h3>
              <span id="customer-details-current-period" class="ms-auto text-muted small">Periode: Data Bulan Berjalan</span>
              <button type="button" id="toggle-details-column-external" class="btn btn-sm btn-outline-secondary ms-2" title="Toggle Details Column"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye me-1" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6s-6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6s6.6 2 9 6" /></svg><span class="toggle-text">Sembunyikan Detail</span></button>
            </div>
            <div class="card-body p-0">
              <!-- New Table Structure -->
              <div class="table-responsive">
                <table class="table table-selectable table-bordered card-table table-striped table-vcenter datatable" id="new-customer-details-table">
                    <thead class="sticky-top">
                        <tr>
                            <th class="w-1">No</th>
                            <th>Nama</th>
                            <th class="w-40 d-none d-md-table-cell details-th">Details</th>
                            <th class="text-end">Tot. Harga</th>
                            <th class="text-end">Modal</th>
                            <th class="text-end">Gross</th>
                            <th class="text-end">Ongkir</th>
                        </tr>
                    </thead>
                    <tbody id="new-customer-details-tbody">
                        {% if detailed_customer_orders is defined and detailed_customer_orders|length > 0 %}
                            {% for customer in detailed_customer_orders %}
                                <tr class="customer-row" data-customer-id="{{ customer.customer_id }}">
                                    <td>{{ loop.index }}</td>
                                    <td>
                                        <div class="fw-bold">{{ customer.customer_name }}</div>
                                        {# <div class="text-muted small">{{ customer.customer_id }}</div> #} {# ID is in data attribute, not displayed here #}
                                    </td>
                                    <td class="w-40 d-none d-md-table-cell p-0 details-cell"> {# p-0 to remove padding for full-width nested table #}
                                        {% if (customer.rincian_paket is defined and customer.rincian_paket|length > 0) or (customer.rincian_item_tambahan is defined and customer.rincian_item_tambahan|length > 0) %}
                                            <table class="table table-sm card-table table-borderless mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Paket/Item</th>
                                                        <th class="text-end">Hrg. Jual</th>
                                                        <th class="text-end">Hrg. Modal</th>
                                                        <th class="text-center">Porsi/Hari</th>
                                                        <th class="text-center">Jml. Hari</th>
                                                        <th class="text-end">Tot. Hrg.</th>
                                                        <th class="text-end">Tot. Modal</th>
                                                        <th class="text-end">Profit</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for paket_detail in customer.rincian_paket %}
                                                        <tr>
                                                            <td>{{ paket_detail.paket_name }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ paket_detail.harga_jual_unit | number_format(0, ',', '.') }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ paket_detail.harga_modal_unit | number_format(0, ',', '.') }}</td>
                                                            <td class="text-center">{{ paket_detail.porsi_per_hari }}</td>
                                                            <td class="text-center">{{ paket_detail.jumlah_hari }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ paket_detail.total_harga_akumulasi | number_format(0, ',', '.') }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ paket_detail.total_modal_akumulasi | number_format(0, ',', '.') }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ paket_detail.total_profit_akumulasi | number_format(0, ',', '.') }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                    {% for item_tambahan_detail in customer.rincian_item_tambahan %}
                                                        <tr>
                                                            <td>{{ item_tambahan_detail.deskripsi }} (+)</td>
                                                            <td class="text-end amount-cell fw-medium">{{ item_tambahan_detail.harga_jual_harian | number_format(0, ',', '.') }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ item_tambahan_detail.harga_modal_harian | number_format(0, ',', '.') }}</td>
                                                            <td class="text-center"></td> {# Porsi/Hari is blank for item_tambahan #}
                                                            <td class="text-center">{{ item_tambahan_detail.jumlah_hari }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ item_tambahan_detail.total_harga_akumulasi | number_format(0, ',', '.') }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ item_tambahan_detail.total_modal_akumulasi | number_format(0, ',', '.') }}</td>
                                                            <td class="text-end amount-cell fw-medium">{{ item_tambahan_detail.total_profit_akumulasi | number_format(0, ',', '.') }}</td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        {% else %}
                                            <div class="text-muted p-2">Tidak ada rincian paket atau item tambahan.</div>
                                        {% endif %}
                                    </td>
                                    <td class="text-end amount-cell fw-medium">{{ customer.overall_total_harga | number_format(0, ',', '.') }}</td>
                                    <td class="text-end amount-cell fw-medium">{{ customer.overall_total_modal | number_format(0, ',', '.') }}</td>
                                    <td class="text-end amount-cell fw-medium">{{ customer.overall_gross_profit | number_format(0, ',', '.') }}</td>
                                    <td class="text-end amount-cell fw-medium">{{ customer.overall_total_ongkir | number_format(0, ',', '.') }}</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">
                                    <div class="empty">
                                        <div class="empty-icon mb-3">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-database-search" width="32" height="32" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 6c0 1.657 3.582 3 8 3s8 -1.343 8 -3s-3.582 -3 -8 -3s-8 1.343 -8 3" /><path d="M4 6v6c0 1.657 3.582 3 8 3m8 -3.5v-5.5" /><path d="M4 12v6c0 1.657 3.582 3 8 3m5.435 -2.005c.56 -.23 1.064 -.538 1.505 -.91" /><path d="M18 18m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M20.2 20.2l1.8 1.8" /></svg>
                                        </div>
                                        <p class="empty-title h3">Data akan dimuat</p>
                                        <p class="empty-subtitle text-secondary">
                                            Pilih periode minggu menggunakan filter di atas untuk menampilkan data pelanggan.
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
              </div>
            </div> {# End card-body p-0 #}
          </div> {# End card #}
        </div> {# End col-12 #}
      </div> {# End row #}
    </div> {# End container-xl #}
  </div> {# End page-body #}
</div> {# End page-wrapper #}
{% endblock %} {# End of content block #}

