{% extends 'base.html.twig' %}

{% block title %}{{ title | default('Reports & Analytics') }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/app/reports.css?v={{ 'now'|date('U') }}">
  <!-- Flatpickr CSS - same as orders page -->
  <link rel="stylesheet" href="/css/flatpickr.min.css">
  <!-- Flatpickr plugins CSS -->
  <link rel="stylesheet" href="/css/flatpickr-plugins/monthSelect.css?v={{ 'now'|date('U') }}">
{% endblock %}

{% block content %}
<div class="page-wrapper">
  <!-- Page title -->
  <div class="page-header d-print-none">
    <div class="container-xl">
      <div class="row align-items-center">
        <div class="col"<h2 class="page-title">Reports & Analytics</h2>
          <div class="text-muted mt-1">
            {% if reports_data.period_info is defined %}
              {{ reports_data.period_info.description }}
            {% else %}
              Ringkasan data dan statistik bisnis
            {% endif %}
            <span id="state-indicator" class="badge bg-success-lt ms-2 d-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm me-1" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M5 12l5 5l10 -10"/>
              </svg>
              Filter dipulihkan
            </span>
          </div>
        </div>
        <div class="col-auto ms-auto d-print-none">
          <div class="d-flex align-items-center gap-2">
            <!-- Date Navigation & Input (Desktop) -->
            <div class="d-none d-md-flex align-items-center gap-2">
              <!-- Navigation Buttons -->
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline btn-icon" id="period-nav-prev" title="Periode sebelumnya">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M15 6l-6 6l6 6"/>
                  </svg>
                </button>
                <button type="button" class="btn btn-outline btn-icon" id="period-nav-today" title="Periode saat ini">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                </button>
                <button type="button" class="btn btn-outline btn-icon" id="period-nav-next" title="Periode selanjutnya">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M9 6l6 6l-6 6"/>
                  </svg>
                </button>
              </div>

              <!-- Search Input Layout -->
              <div class="row g-2">
                <div class="col">
                  <div class="input-icon" style="min-width: 200px;">
                    <input type="text" id="period-input" class="form-control" placeholder="Pilih periode..." readonly>
                    <span class="input-icon-addon">
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"/>
                        <path d="M16 3v4"/>
                        <path d="M8 3v4"/>
                        <path d="M4 11h16"/>
                      </svg>
                    </span>
                  </div>
                </div>
                <div class="col-auto">
                  <button class="btn" type="button" id="apply-period-btn" title="Terapkan filter periode">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                      <path d="M21 21l-6 -6"/>
                    </svg>
                    <span class="btn-text d-none d-lg-inline">Search</span>
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                  </button>
                </div>
              </div>
            </div>

            <!-- Mobile Layout -->
            <div class="d-md-none">
              <div class="input-group" style="min-width: 200px;">
                <input type="text" id="period-input-mobile" class="form-control" placeholder="Pilih periode..." readonly>
                <button class="btn btn-primary" type="button" id="apply-period-btn-mobile" title="Terapkan filter periode">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                    <path d="M21 21l-6 -6"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Period Type Dropdown -->
            <div class="dropdown">
              <button class="btn btn-outline dropdown-toggle" type="button" id="period-type-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"/>
                  <path d="M16 3v4"/>
                  <path d="M8 3v4"/>
                  <path d="M4 11h16"/>
                </svg>
                <span id="period-type-label">Monthly</span>
              </button>
              <ul class="dropdown-menu">
                <li><h6 class="dropdown-header">Tipe Periode</h6></li>
                <li><a class="dropdown-item period-type-option" href="#" data-period="monthly">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <rect x="4" y="5" width="16" height="16" rx="2"/>
                    <line x1="16" y1="3" x2="16" y2="7"/>
                    <line x1="8" y1="3" x2="8" y2="7"/>
                    <line x1="4" y1="11" x2="20" y2="11"/>
                  </svg>
                  Monthly
                  <small class="text-muted d-block">Pilih bulan</small>
                </a></li>
                <li><a class="dropdown-item period-type-option" href="#" data-period="weekly">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12,6 12,12 16,14"/>
                  </svg>
                  Weekly
                  <small class="text-muted d-block">Pilih minggu (Senin-Minggu)</small>
                </a></li>
                <li><a class="dropdown-item period-type-option" href="#" data-period="custom">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <rect x="4" y="5" width="16" height="16" rx="2"/>
                    <line x1="16" y1="3" x2="16" y2="7"/>
                    <line x1="8" y1="3" x2="8" y2="7"/>
                    <line x1="4" y1="11" x2="20" y2="11"/>
                    <path d="M11 15h1v4h1"/>
                  </svg>
                  Custom Range
                  <small class="text-muted d-block">Pilih rentang tanggal</small>
                </a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#" id="reset-filter-btn">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"/>
                    <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"/>
                  </svg>
                  Reset Filter
                  <small class="text-muted d-block">Hapus filter tersimpan</small>
                </a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="page-body">
    <div class="container-xl">
      <!-- Error Alert -->
      {% if error %}
        <div class="alert alert-danger alert-dismissible" role="alert">
          <div class="alert-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon">
              <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
              <path d="M12 8v4"></path>
              <path d="M12 16h.01"></path>
            </svg>
          </div>
          <div>
            <h4 class="alert-heading">Koneksi bermasalah 🫤</h4>
            <div class="alert-description">{{ error }}</div>
          </div>
          <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
        </div>
      {% endif %}

      <!-- Overview Cards -->
      <div class="row row-cards mb-4">
        {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
          <!-- Full Access Cards (Owner) -->
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Total Orders</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2">{{ reports_data.total_orders | default(0) }}</div>
                  <div class="me-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      8%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17l6 -6l4 4l8 -8"/>
                        <path d="M14 7l7 0l0 7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Total Revenue</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2">Rp {{ reports_data.total_revenue | default(0) | number_format(0, ',', '.') }}</div>
                  <div class="me-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      12%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17l6 -6l4 4l8 -8"/>
                        <path d="M14 7l7 0l0 7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="subheader">Active Customers</div>
                <div class="ms-auto lh-1">
                  <div class="dropdown">
                    <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                    <div class="dropdown-menu dropdown-menu-end">
                      <a class="dropdown-item active" href="#">Last 7 days</a>
                      <a class="dropdown-item" href="#">Last 30 days</a>
                      <a class="dropdown-item" href="#">Last 3 months</a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="d-flex align-items-baseline">
                <div class="h1 mb-0 me-2">{{ reports_data.active_customers | default(0) }}</div>
                <div class="me-auto">
                  <span class="text-green d-inline-flex align-items-center lh-1">
                    5%
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 17l6 -6l4 4l8 -8"/>
                      <path d="M14 7l7 0l0 7"/>
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>

        {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Average Order Value</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2">Rp {{ reports_data.average_order_value | default(0) | number_format(0, ',', '.') }}</div>
                  <div class="me-auto">
                    <span class="text-red d-inline-flex align-items-center lh-1">
                      -2%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 7l6 6l4 -4l8 8"/>
                        <path d="M14 17l7 0l0 -7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Role-based Access Divider -->
      {% if reports_data.access_level is defined and reports_data.access_level == 'limited' %}
        <div class="row">
          <div class="col-12">
            <div class="alert alert-info" role="alert">
              <div class="alert-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 16v-4"></path>
                  <path d="M12 8h.01"></path>
                </svg>
              </div>
              <div>
                <h4 class="alert-heading">Akses Terbatas</h4>
                <div class="alert-description">Anda memiliki akses terbatas ke data reports. Hubungi owner untuk akses penuh.</div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}

      <!-- Financial Overview Section -->
      {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
      <div class="row mb-4">
        <div class="col-12 col-md-8">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler me-2" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12"/>
                  <path d="M20 12v4h-4a2 2 0 0 1 0 -4h4"/>
                </svg>
                Overview Keuangan
              </h3>
              <div class="card-actions">
                <button class="btn btn-sm me-2" id="copyMarkdownBtn" title="Copy as Markdown">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-sm" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                    <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                  </svg>
                  <span class="d-sm-none d-lg-inline">Copy MD</span>
                </button>
                <span class="badge rounded-pill">📅 Periode: {{ reports_data.period_info.description | default('Semua Waktu') }}</span>
              </div>
            </div>
            <div class="card-body p-2">

              <!-- Revenue Section -->
              <div class="mb-3" data-section="revenue">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-success-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 3v18h18"/>
                      <path d="M9 9l4 4l4 -4"/>
                    </svg>
                  </span>
                  Pendapatan (Revenue)
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🍱 Pendapatan Catering Harian
                    </span>
                    <strong class="text-success">
                      Rp {{ reports_data.financial_overview.product_revenue | default(8000000) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🚚 Pendapatan Jasa Kirim (Ongkir)
                    </span>
                    <strong class="text-info">
                      Rp {{ reports_data.financial_overview.delivery_revenue | default(1500000) | number_format(0, ',', '.') }}
                    </strong>
                  </li>
                </ul>
                <div class="d-flex justify-content-between align-items-center p-3 rounded mt-2 border">
                  <strong class="h5 mb-0">💰 Total Pendapatan</strong>
                  <strong class="mb-0">Rp {{ reports_data.financial_overview.total_revenue | default(9500000) | number_format(0, ',', '.') }}</strong>
                </div>
                <ul class="list-group list-group-flush d-none">
                </ul>
              </div>

              <!-- COGS Section -->
              <div class="mb-3" data-section="cogs">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-orange-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 3v18h18"/>
                      <path d="M21 9l-4 4l-4 -4"/>
                    </svg>
                  </span>
                  Biaya Pokok Penjualan (COGS)
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                    <span>
                      🏭 Modal Catering Harian
                    </span>
                    <span class="text-orange">
                      Rp {{ reports_data.financial_overview.product_cost | default(3600000) | number_format(0, ',', '.') }}
                    </span>
                  </li>
                </ul>
              </div>

              <!-- Gross Profit Section -->
              <div class="mb-3" data-section="gross-profit">
                <h4 class="mb-2 d-flex align-items-center">
                  <span class="avatar bg-blue-lt me-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <circle cx="12" cy="12" r="9"/>
                      <path d="M9 12l2 2l4 -4"/>
                    </svg>
                  </span>
                  Laba Kotor Catering Harian
                </h4>
                <div class="text-muted small mb-2 ms-5">
                  <span class="badge bg-secondary-lt text-wrap">📊 Pendapatan Catering Harian - Modal Produk</span>
                </div>
                <div class="d-flex justify-content-between align-items-center p-3 rounded">
                  <div>
                    <strong class="h5 mb-0">💎 Laba Kotor Catering</strong>
