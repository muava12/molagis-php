{% extends 'base.html.twig' %}

{% block title %}{{ title | default('Reports & Analytics') }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="/css/app/reports.css?v={{ 'now'|date('U') }}">
{% endblock %}

{% block content %}
<div class="page-wrapper">
  <!-- Page title -->
  <div class="page-header d-print-none">
    <div class="container-xl">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="page-title">Reports & Analytics</h2>
          <div class="text-muted mt-1">
            {% if reports_data.period_info is defined %}
              {{ reports_data.period_info.description }}
            {% else %}
              Ringkasan data dan statistik bisnis
            {% endif %}
          </div>
        </div>
        <div class="col-auto ms-auto d-print-none">
          <div class="btn-list">
            <!-- Filter Period Dropdown -->
            <div class="dropdown">
              <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon me-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"/>
                  <path d="M16 3v4"/>
                  <path d="M8 3v4"/>
                  <path d="M4 11h16"/>
                </svg>
                Filter Periode
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/reports">Semua Waktu</a></li>
                <li><a class="dropdown-item" href="/reports?period=weekly">Minggu Ini</a></li>
                <li><a class="dropdown-item" href="/reports?period=monthly">Bulan Ini</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#custom-period-modal">Periode Kustom</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="page-body">
    <div class="container-xl">
      <!-- Error Alert -->
      {% if error %}
        <div class="alert alert-danger alert-dismissible" role="alert">
          <div class="alert-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon">
              <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
              <path d="M12 8v4"></path>
              <path d="M12 16h.01"></path>
            </svg>
          </div>
          <div>
            <h4 class="alert-heading">Koneksi bermasalah ðŸ«¤</h4>
            <div class="alert-description">{{ error }}</div>
          </div>
          <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
        </div>
      {% endif %}

      <!-- Overview Cards -->
      <div class="row row-cards mb-4">
        {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
          <!-- Full Access Cards (Owner) -->
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Total Orders</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2">{{ reports_data.total_orders | default(0) }}</div>
                  <div class="me-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      8%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17l6 -6l4 4l8 -8"/>
                        <path d="M14 7l7 0l0 7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Total Revenue</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2">Rp {{ reports_data.total_revenue | default(0) | number_format(0, ',', '.') }}</div>
                  <div class="me-auto">
                    <span class="text-green d-inline-flex align-items-center lh-1">
                      12%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17l6 -6l4 4l8 -8"/>
                        <path d="M14 7l7 0l0 7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        <div class="col-sm-6 col-lg-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex align-items-center">
                <div class="subheader">Active Customers</div>
                <div class="ms-auto lh-1">
                  <div class="dropdown">
                    <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                    <div class="dropdown-menu dropdown-menu-end">
                      <a class="dropdown-item active" href="#">Last 7 days</a>
                      <a class="dropdown-item" href="#">Last 30 days</a>
                      <a class="dropdown-item" href="#">Last 3 months</a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="d-flex align-items-baseline">
                <div class="h1 mb-0 me-2">{{ reports_data.active_customers | default(0) }}</div>
                <div class="me-auto">
                  <span class="text-green d-inline-flex align-items-center lh-1">
                    5%
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                      <path d="M3 17l6 -6l4 4l8 -8"/>
                      <path d="M14 7l7 0l0 7"/>
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>

        {% if reports_data.access_level is defined and reports_data.access_level == 'full' %}
          <div class="col-sm-6 col-lg-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <div class="subheader">Average Order Value</div>
                  <div class="ms-auto lh-1">
                    <div class="dropdown">
                      <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Last 7 days</a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item active" href="#">Last 7 days</a>
                        <a class="dropdown-item" href="#">Last 30 days</a>
                        <a class="dropdown-item" href="#">Last 3 months</a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="d-flex align-items-baseline">
                  <div class="h1 mb-0 me-2">Rp {{ reports_data.average_order_value | default(0) | number_format(0, ',', '.') }}</div>
                  <div class="me-auto">
                    <span class="text-red d-inline-flex align-items-center lh-1">
                      -2%
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon ms-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 7l6 6l4 -4l8 8"/>
                        <path d="M14 17l7 0l0 -7"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Role-based Access Divider -->
      {% if reports_data.access_level is defined and reports_data.access_level == 'limited' %}
        <div class="row">
          <div class="col-12">
            <div class="alert alert-info" role="alert">
              <div class="alert-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M12 16v-4"></path>
                  <path d="M12 8h.01"></path>
                </svg>
              </div>
              <div>
                <h4 class="alert-heading">Akses Terbatas</h4>
                <div class="alert-description">Anda memiliki akses terbatas ke data reports. Hubungi owner untuk akses penuh.</div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}

      <!-- Placeholder for future detailed reports -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Detail Reports</h3>
            </div>
            <div class="card-body">
              <div class="text-center py-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-lg text-muted mb-3" width="48" height="48" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"/>
                  <path d="M12 9h.01"/>
                  <path d="M11 12h1v4h1"/>
                </svg>
                <h3 class="text-muted">Coming Soon</h3>
                <p class="text-muted">Detail reports dengan tabel customer order dan filter periode akan segera tersedia.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom Period Modal -->
<div class="modal modal-blur fade" id="custom-period-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Pilih Periode Kustom</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="custom-period-form">
          <div class="mb-3">
            <label class="form-label">Tanggal Mulai</label>
            <input type="date" class="form-control" name="start_date" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Tanggal Akhir</label>
            <input type="date" class="form-control" name="end_date" required>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">Batal</a>
        <button type="submit" class="btn btn-primary ms-auto" form="custom-period-form">Terapkan Filter</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="module" src="/js/app/reports.js?v={{ 'now'|date('U') }}"></script>
{% endblock %}
