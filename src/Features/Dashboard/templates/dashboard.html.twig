{% extends 'base.html.twig' %}
{% block title %}
  Dashboard Molagis
{% endblock %}
{% block content %}
<div class="page-wrapper">
    <div class="container-xl">
        <!-- Page title -->
        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Dashboard
                    </h2>
                    <div class="text-muted mt-1">Selamat datang kembali, Admin!</div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            {% if error %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <div class="d-flex">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="alert-icon">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
                                <path d="M12 8l0 4"/>
                                <path d="M12 16l0 .01"/>
                            </svg>
                        </div>
                        <div>
                            <h4 class="alert-title">Koneksi Bermasalah</h4>
                            <div class="text-secondary">{{ error }}</div>
                        </div>
                    </div>
                    <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
                </div>
            {% endif %}
            <div class="row row-deck row-cards">
                <!-- Card Pengantaran Hari Ini -->
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header border-0">
                            <h2 class="h2 card-title me-auto">Pengantaran Hari Ini</h2>
                            <a href="/delivery-admin" class="btn">Total <span class="badge bg-teal text-green-fg ms-2">{{ total_deliveries }}</span></a>
                        </div>
                        <div class="card-body p-1">
                            <div class="table-responsive">
                                <table class="table table-vcenter">
                                    <thead>
                                        <tr>
                                            <th>Kurir</th>
                                            <th>Jumlah Pengantaran</th>
                                            <th class="w-1">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if deliveries is not empty %}
                                            {% for delivery in deliveries %}
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <span class="avatar avatar-sm" style="background-image: url(https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ delivery.kurir_id }})"></span>
                                                            <div class="ms-2">{{ delivery.courier_name }}</div>
                                                        </div>
                                                    </td>
                                                    <td>{{ delivery.jumlah_pengantaran }} titik Pengantaran</td>
                                                    <td>
                                                        <a target="_blank" href="/delivery/{{ delivery.kurir_id }}" class="btn btn-icon" aria-label="Buka">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                                <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
                                                                <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/>
                                                            </svg>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr>
                                                <td colspan="3" class="text-center">Tidak ada pengantaran hari ini</td>
                                            </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card Statistik (sebelumnya) -->
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Statistik</h3>
                            <p>Selamat datang di dashboard Molagis. Pilih menu di navbar untuk mengelola pelanggan, pesanan, atau pengiriman.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}