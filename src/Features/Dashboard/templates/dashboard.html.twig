{% extends 'base.html.twig' %}
{% block title %}Dashboard Molagis
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="/css/awesomplete.min.css">
	<link rel="stylesheet" href="/css/app/awesomplete.css?v={{ 'now'|date('U') }}">
	<link rel="stylesheet" href="/css/app/custom.css?v={{ 'now'|date('U') }}">
	<style>
		/* Pastikan tooltip responsif di dalam modal */
		.tooltip {
			pointer-events: none;
			z-index: 2000; /* Lebih tinggi dari modal (z-index 1040) */
		}

		.tooltip-inner {
			background: var(--tblr-dark, #343a40);
			color: var(--tblr-white, #ffffff);
			padding: 4px 8px;
			border-radius: 4px;
			font-size: 12px;
			white-space: nowrap;
		}

		.tooltip .tooltip-arrow::before {
			border-bottom-color: var(--tblr-dark, #343a40);
		}
	</style>
{% endblock %}
{% block content %}
	<div
		class="page-wrapper">
		<!-- Page title -->
		<div class="page-header d-print-none">
			<div class="container-xl">
				<div class="row align-items-center">
					<div class="col">
						<h2 class="page-title">Dashboard</h2>
						<div class="text-muted mt-1">Selamat datang kembali, Admin!</div>
					</div>
					<div class="col-auto ms-auto d-print-none">
						<div
							class="btn-list">
							<!-- Tombol New Customer - Desktop -->
							<a href="#" class="btn btn-1 d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#dashboard-add-modal">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"/><path d="M16 19h6"/><path d="M19 16v6"/><path d="M6 21v-2a4 4 0 0 1 4 -4h4"/></svg>
								Tambah Customer
							</a>
							<!-- Tombol New Customer - Mobile -->
							<a href="#" class="btn btn-1 d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#dashboard-add-modal" aria-label="Add new customer">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"/><path d="M16 19h6"/><path d="M19 16v6"/><path d="M6 21v-2a4 4 0 0 1 4 -4h4"/></svg>
							</a>
							<!-- Tombol Create new order - Desktop -->
							<a href="#" class="btn btn-primary btn-5 d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-add-order">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-shopping-cart-plus">
									<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
									<path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
									<path d="M12.5 17h-6.5v-14h-2"/>
									<path d="M6 5l14 1l-.86 6.017m-2.64 .983h-10.5"/>
									<path d="M16 19h6"/>
									<path d="M19 16v6"/>
								</svg>
								Input Pesanan
							</a>
							<!-- Tombol Create new order - Mobile -->
							<a href="#" class="btn btn-primary btn-6 d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-add-order" aria-label="Create new report">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-shopping-cart-plus">
									<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
									<path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
									<path d="M12.5 17h-6.5v-14h-2"/>
									<path d="M6 5l14 1l-.86 6.017m-2.64 .983h-10.5"/>
									<path d="M16 19h6"/>
									<path d="M19 16v6"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="page-body">
			<div class="container-xl">
				<div id="error-container">
					{% if error %}
						<div class="alert alert-danger alert-dismissible" role="alert">
							<div class="alert-icon">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon icon-2">
									<path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
									<path d="M12 8v4"></path>
									<path d="M12 16h.01"></path>
								</svg>
							</div>
							<div>
								<h4 class="alert-heading">Koneksi bermasalah ðŸ«¤</h4>
								<div class="alert-description">{{ error }}</div>
							</div>
							<a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
						</div>
					{% endif %}
				</div>
				<div
					class="row row-cards"> {# Removed row-deck #}
					<!-- Card Daftar Pengantaran -->
					<div class="col-lg-6">
						<div class="card">
							<div class="card-header border-0">
								<div class="me-auto">
									<h2 class="h2 card-title">Daftar Pengantaran</h2>
									<div class="text-muted" id="date-subtitle" style="min-height:1.4em;">
										{{ date_subtitle|default('') }}
									</div>
								</div>
								<div
									class="d-flex align-items-center">
									<!-- Tombol Previous -->
									<button id="prev-day" class="btn btn-icon me-2" data-date="{{ current_date }}">
										<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
											<path d="M15 6l-6 6l6 6"/>
										</svg>
									</button>
									<!-- Tombol Next -->
									<button id="next-day" class="btn btn-icon me-2" data-date="{{ current_date }}">
										<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
											<path d="M9 6l6 6l-6 6"/>
										</svg>
									</button>
									<a href="#" class="btn">Total
										<span class="badge bg-primary text-primary-fg ms-2" id="total-badge">{{ total_deliveries }}</span>
									</a>
								</div>
							</div>
							<div class="card-body p-1">
								<div id="deliveries-list-container" class="list-group list-group-flush"></div>
							</div>
						</div>
					</div>
					<!-- Card Informasi Terbaru (Recent Orders & Statistics) -->
					<div class="col-lg-6">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Informasi Terbaru</h3>
							</div>
							<div class="card-body p-2"> {# Changed card-body to card-body p-2 #}
								<div class="mb-3"> {# Section for Recent Orders - Changed mb-4 to mb-3 #}
									<h4 class="mb-2">5 Pesanan Terakhir</h4>
									{% if recent_orders is defined and recent_orders is not empty %}
										<ul class="list-group list-group-flush">
											{% for order in recent_orders %}
												<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
													<span>
														{{ order.customer_name|default('Tanpa Nama') }} <span class="small text-muted">| ID: {{ order.order_id }}</span>
													</span>
													<span class="badge bg-primary-lt rounded-pill"> {# Changed bg-primary to bg-primary-lt #}
														Rp.{{ order.total_harga|number_format(0, ',', '.') }}
													</span>
												</li>
											{% endfor %}
										</ul>
									{% else %}
										<p class="text-muted">Belum ada pesanan terbaru.</p>
									{% endif %}
								</div>

								<div> {# Section for Statistics #}
									<h4 class="mb-2">Statistik Hari Ini</h4>
									{% if dashboard_statistics is defined %}
										<ul class="list-group list-group-flush">
											<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
												Total Pesanan:
												<span class="badge bg-secondary-lt rounded-pill">{{ dashboard_statistics.total_orders_today|default(0) }}</span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
												Total Pendapatan:
												<span class="badge bg-success-lt rounded-pill">Rp.{{ dashboard_statistics.total_revenue_today|number_format(0, ',', '.') }}</span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
												Pengantaran Tertunda:
												<span class="badge bg-warning-lt rounded-pill">{{ dashboard_statistics.pending_deliveries_today|default(0) }}</span>
											</li>
										</ul>
									{% else %}
										<p class="text-muted">Statistik tidak tersedia.</p>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Modal Add Customer -->
		{% include 'partials/add-customer-modal.html.twig' with {
            'modal_id': 'dashboard-add-modal',
            'button_text': 'Tambah Customer'
        } %}

		<!-- Modal Create New Order -->
		<div class="modal modal-blur fade" id="modal-add-order" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog modal-lg modal-fullscreen-md-down" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Input Pesanan Baru</h5>
						<button type="button" class="btn-close modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>

					<div class="modal-body">
						<div class="row">
							<div class="col-12 col-sm-6">
								<div class="date-picker-container">
									<div class="date-picker-buttons">
										<button class="btn" id="today-btn">Hari Ini</button>
										<button class="btn" id="next-month-btn">Bulan Depan</button>
										<button class="btn" id="clear-btn">Clear</button>
									</div>
									<div class="date-picker-header">
										<button class="btn btn-icon" id="prev-month">
											{% include 'svg/chevron-left.svg.twig' %}
										</button>
										<div class="date-picker-month text-body" id="calendar-month-year"></div>
										<button class="btn btn-icon" id="next-month">
											{% include 'svg/chevron-right.svg.twig' %}
										</button>
									</div>
									<div class="date-picker-weekdays text-secondary">
										<div>Sen</div>
										<div>Sel</div>
										<div>Rab</div>
										<div>Kam</div>
										<div>Jum</div>
										<div>Sab</div>
										<div>Min</div>
									</div>
									<div class="date-picker-days" id="calendar-days"></div>
									<div class="selected-date mt-2">
										<h3 class="selected-dates-count h6" id="selected-dates-count">0 Hari dipilih</h3>
										<div class="selected-dates" id="selected-dates"></div>
									</div>
								</div>
							</div>
							<div class="col-12 col-sm-6">
								<form id="order-form" novalidate>
									<div class="mb-3">
										<label for="customer-input" class="form-label text-muted">Pelanggan</label>
										<input class="form-control w-100" type="text" id="customer-input" placeholder="Ketik Nama Pelanggan" autocomplete="off" required>
									</div>
									<div class="row g-2 mb-3 package-list">
										<div class="col-7">
											<label class="form-label">Paket Makanan</label>
											<select title="Pilih Paket" class="form-select" id="package-select" required>
												<option value="" disabled selected>Pilih Paket Makanan</option>
												<!-- Options populated by JS -->
											</select>
										</div>
										<div class="col-3">
											<label class="form-label">Jumlah</label>
											<input class="form-control" type="number" id="order-quantity" min="1" value="1" placeholder="Jumlah Pesanan" required>
										</div>
										<div class="col-2 align-self-end">
											<button type="button" class="btn btn-icon btn-outline-primary add-package w-100" aria-label="Tambah paket">
												{% include 'svg/plus.svg.twig' %}
											</button>
										</div>
									</div>
									<div class="border rounded-3 mb-3">
										<div class="p-2 cursor-pointer d-flex align-items-center toggle-header" data-bs-toggle="collapse" data-bs-target="#additional-items-collapse" aria-expanded="false" aria-controls="additional-items-collapse">
											{% include 'svg/chevron-right.svg.twig' %}
											<span class="ms-2">Item Tambahan</span>
										</div>
										<div class="collapse" id="additional-items-collapse">
											<div class="p-2">
												<div class="row g-2 mb-3">
													<div class="col-6">
														<label class="form-label">Item Tambahan</label>
														<input class="form-control" id="item-tambahan" type="text" placeholder="Item Tambahan">
													</div>
													<div class="col-3">
														<label class="form-label">Harga</label>
														<input class="form-control" id="harga-item-tambahan" type="number" min="0" placeholder="Harga">
													</div>
													<div class="col-3">
														<label class="form-label">Modal</label>
														<input class="form-control" id="harga-modal-item-tambahan" type="number" min="0" placeholder="Harga Modal">
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="row g-2 mb-3">
										<div class="col-6">
											<label class="form-label">Kurir</label>
											<select title="Pilih Kurir" class="form-select" id="courier-select">
												<option value="" disabled>Pilih Kurir</option>
												{% for courier in active_couriers %}
													<option value="{{ courier.id }}" {{ courier.id == default_courier ? 'selected' : '' }}>{{ courier.nama }}</option>
												{% endfor %}
											</select>
										</div>
										<div class="col-6">
											<label class="form-label">Ongkos Kirim</label>
											<div class="input-group">
												<input title="Masukkan Ongkos Kirim" class="form-control" type="number" id="shipping-cost" value="{{ default_shipping_cost|default('5000') }}" min="5000" step="1000" required>
												<span class="input-group-text d-none" id="shipping-fast-icon">
													{% include 'svg/truck-delivery.svg.twig' %}
												</span>
											</div>
										</div>
									</div>
									<div class="mb-3">
										<label class="form-label">Metode Pembayaran</label>
										<select title="Pilih Metode Pembayaran" class="form-select" id="payment-method" required>
											<option value="cod">COD</option>
											<option value="transfer" selected>Transfer</option>
											<option value="belum_bayar">Belum Bayar</option>
										</select>
									</div>
									<div class="mb-3">
										<div class="form-selectgroup">
											<label class="form-selectgroup-item">
												<input type="radio" name="notes-toggle" class="form-selectgroup-input" data-bs-toggle="collapse" data-bs-target="#order-notes-collapse" aria-expanded="false" aria-controls="order-notes-collapse" id="order-notes-toggle">
												<span class="form-selectgroup-label">
													{% include 'svg/pencil.svg.twig' %}
													Order Notes
												</span>
											</label>
											<label class="form-selectgroup-item">
												<input type="radio" name="notes-toggle" class="form-selectgroup-input" data-bs-toggle="collapse" data-bs-target="#kitchen-notes-collapse" aria-expanded="false" aria-controls="kitchen-notes-collapse" id="kitchen-notes-toggle">
												<span class="form-selectgroup-label">
													{% include 'svg/pencil.svg.twig' %}
													Kitchen Notes
												</span>
											</label>
											<label class="form-selectgroup-item">
												<input type="radio" name="notes-toggle" class="form-selectgroup-input" data-bs-toggle="collapse" data-bs-target="#courier-notes-collapse" aria-expanded="false" aria-controls="courier-notes-collapse" id="courier-notes-toggle">
												<span class="form-selectgroup-label">
													{% include 'svg/pencil.svg.twig' %}
													Courier Notes
												</span>
											</label>
										</div>
										<div class="collapse" id="order-notes-collapse">
											<textarea placeholder="Order Notes" class="form-control mt-2" id="order-notes"></textarea>
										</div>
										<div class="collapse" id="kitchen-notes-collapse">
											<textarea placeholder="Kitchen Notes" class="form-control mt-2" id="kitchen-notes"></textarea>
										</div>
										<div class="collapse" id="courier-notes-collapse">
											<textarea placeholder="Courier Notes" class="form-control mt-2" id="courier-notes"></textarea>
										</div>
									</div>
									<input type="hidden" id="selected-dates-hidden" name="selectedDates"/>
								</form>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">Batal</a>
						<button type="submit" class="btn btn-primary ms-auto" form="order-form">
							{% include 'svg/check.svg.twig' %}
							Simpan Pesanan
						</button>
					</div>

				</div>
			</div>
		</div>

		<!-- Modal Daftar Antaran -->
		{% include 'partials/delivery-list-modal.html.twig' %}

		{% include 'order-confirmation.html.twig' %}
		{% include 'toast.html.twig' %}
	</div>
{% endblock %}
{% block javascripts %} <script src="/js/awesomplete.min.js"></script>
	 <script type="module" src="/js/app/dashboard.js?v={{ 'now'|date('U') }}"></script>
{% endblock %}
