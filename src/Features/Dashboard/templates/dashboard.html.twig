{% extends 'base.html.twig' %}
{% block title %}Dashboard Molagis
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="/css/awesomplete.min.css">
	<link rel="stylesheet" href="/css/app/awesomplete.css?v={{ 'now'|date('U') }}">
	<link rel="stylesheet" href="/css/app/custom.css?v={{ 'now'|date('U') }}">
	<style>
		/* Pastikan tooltip responsif di dalam modal */
		.tooltip {
			pointer-events: none;
			z-index: 2000; /* Lebih tinggi dari modal (z-index 1040) */
		}

		.tooltip-inner {
			background: var(--tblr-dark, #343a40);
			color: var(--tblr-white, #ffffff);
			padding: 4px 8px;
			border-radius: 4px;
			font-size: 12px;
			white-space: nowrap;
		}

		.tooltip .tooltip-arrow::before {
			border-bottom-color: var(--tblr-dark, #343a40);
		}
	</style>
{% endblock %}
{% block content %}
	<div
		class="page-wrapper">
		<!-- Page title -->
		<div class="page-header d-print-none">
			<div class="container-xl">
				<div class="row align-items-center">
					<div class="col">
						<h2 class="page-title">Dashboard</h2>
						<div class="text-muted mt-1">Selamat datang kembali, Admin!</div>
					</div>
					<div class="col-auto ms-auto d-print-none">
						<div
							class="btn-list">
							<!-- Tombol New Customer - Desktop -->
							<a href="#" class="btn btn-1 d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#dashboard-add-modal">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"/><path d="M16 19h6"/><path d="M19 16v6"/><path d="M6 21v-2a4 4 0 0 1 4 -4h4"/></svg>
								Tambah Customer
							</a>
							<!-- Tombol New Customer - Mobile -->
							<a href="#" class="btn btn-1 d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#dashboard-add-modal" aria-label="Add new customer">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-plus"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"/><path d="M16 19h6"/><path d="M19 16v6"/><path d="M6 21v-2a4 4 0 0 1 4 -4h4"/></svg>
							</a>
							<!-- Tombol Create new order - Desktop -->
							<a href="#" class="btn btn-primary btn-5 d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-add-order">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-shopping-cart-plus">
									<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
									<path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
									<path d="M12.5 17h-6.5v-14h-2"/>
									<path d="M6 5l14 1l-.86 6.017m-2.64 .983h-10.5"/>
									<path d="M16 19h6"/>
									<path d="M19 16v6"/>
								</svg>
								Input Pesanan
							</a>
							<!-- Tombol Create new order - Mobile -->
							<a href="#" class="btn btn-primary btn-6 d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-add-order" aria-label="Create new report">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-shopping-cart-plus">
									<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
									<path d="M4 19a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/>
									<path d="M12.5 17h-6.5v-14h-2"/>
									<path d="M6 5l14 1l-.86 6.017m-2.64 .983h-10.5"/>
									<path d="M16 19h6"/>
									<path d="M19 16v6"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="page-body">
			<div class="container-xl">
				<div id="error-container">
					{% if error %}
						<div class="alert alert-danger alert-dismissible" role="alert">
							<div class="alert-icon">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon alert-icon icon-2">
									<path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
									<path d="M12 8v4"></path>
									<path d="M12 16h.01"></path>
								</svg>
							</div>
							<div>
								<h4 class="alert-heading">Koneksi bermasalah ðŸ«¤</h4>
								<div class="alert-description">{{ error }}</div>
							</div>
							<a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
						</div>
					{% endif %}
				</div>
				<div
					class="row row-cards"> {# Removed row-deck #}
					<!-- Card Daftar Pengantaran -->
					<div class="col-lg-6">
						<div class="card">
							<div class="card-header border-0">
								<div class="me-auto">
									<h2 class="h2 card-title">Daftar Pengantaran</h2>
									<div class="text-muted" id="date-subtitle" style="min-height:1.4em;">
										{{ date_subtitle|default('') }}
									</div>
								</div>
								<div
									class="d-flex align-items-center">
									<!-- Tombol Previous -->
									<button id="prev-day" class="btn btn-icon me-2" data-date="{{ current_date }}">
										<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
											<path d="M15 6l-6 6l6 6"/>
										</svg>
									</button>
									<!-- Tombol Next -->
									<button id="next-day" class="btn btn-icon me-2" data-date="{{ current_date }}">
										<svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
											<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
											<path d="M9 6l6 6l-6 6"/>
										</svg>
									</button>
									<a href="#" class="btn">Total
										<span class="badge bg-primary text-primary-fg ms-2" id="total-badge">{{ total_deliveries_display }}</span>
									</a>
								</div>
							</div>
							<div class="card-body p-3">
								<div id="deliveries-list-container">
                                    {% if is_sunday_initial_load is defined and is_sunday_initial_load %}
                                        <div class="text-center py-4">
                                            {% include 'svg/beach.svg.twig' with {'width': 150, 'height': 150, 'style': 'margin: auto; display: block; margin-bottom: 1rem;'} %}
                                            <p class="h3 mt-2 mb-1">Minggu Ceria!</p>
                                            <p class="text-muted mb-0">Saatnya istirahat dan menikmati hari libur.</p>
                                        </div>
                                    {% elseif deliveries is defined and deliveries is not empty %}
                                        {% for delivery in deliveries %}
                                            <div class="delivery-item-row py-2"> {# Main wrapper for one delivery entry #}
                                                <div class="row g-3 align-items-center">
                                                    <div class="col-auto"> {# Avatar part #}
                                                        {% if delivery.kurir_id is null or delivery.kurir_id == 0 %}
                                                            <span class="avatar avatar-md bg-pink"> {# Using avatar-md for potentially better sizing #}
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-alert-square-rounded"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" /><path d="M12 8v4" /><path d="M12 16h.01" /></svg>
                                                            </span>
                                                        {% else %}
                                                            <span class="avatar avatar-md" style="background-image: url(https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ delivery.kurir_id }});"></span>
                                                        {% endif %}
                                                    </div>
                                                    <div class="col text-truncate"> {# Text content part #}
                                                        <div class="text-body d-block text-truncate">{{ delivery.courier_name }}</div>
                                                        <div class="text-secondary text-truncate mt-n1">{{ delivery.jumlah_pengantaran }} titik Pengantaran - {{ delivery.jumlah_selesai }} sudah sampai</div>
                                                    </div>
                                                    <div class="col-auto"> {# Action button part #}
                                                        <a href="#" class="btn btn-icon view-delivery-details" data-courier-id="{{ delivery.kurir_id ?? 'null' }}" data-courier-name="{{ delivery.courier_name }}" aria-label="Lihat Antaran">
                                                            <svg class="icon icon-2" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"/><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"/></svg>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% else %}
                                        <div class="text-center py-4">
                                            <p class="m-0">Tidak ada pengantaran untuk tanggal ini</p>
                                        </div>
                                    {% endif %}
								</div>
							</div>
						</div>
					</div>
					<!-- Card Informasi Terbaru (Recent Orders & Statistics) -->
					<div class="col-lg-6">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Informasi Terbaru</h3>
							</div>
							<div class="card-body p-2"> {# Changed card-body to card-body p-2 #}
								<div class="mb-3"> {# Section for Recent Orders - Changed mb-4 to mb-3 #}
									<h4 class="mb-2">5 Pesanan Terakhir</h4>
									{% if recent_orders is defined and recent_orders is not empty %}
										<ul class="list-group list-group-flush">
											{% for order in recent_orders %}
												<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
													<span>
														{{ order.customer_name|default('Tanpa Nama') }} <span class="small text-muted">| ID: {{ order.order_id }}</span>
													</span>
													<span class="badge bg-primary-lt rounded-pill"> {# Changed bg-primary to bg-primary-lt #}
														Rp.{{ order.total_harga|number_format(0, ',', '.') }}
													</span>
												</li>
											{% endfor %}
										</ul>
									{% else %}
										<p class="text-muted">Belum ada pesanan terbaru.</p>
									{% endif %}
								</div>

								<div> {# Section for Statistics #}
									<h4 class="mb-2">Statistik Hari Ini</h4>
									{% if dashboard_statistics is defined %}
										<ul class="list-group list-group-flush">
											<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
												Total Pesanan:
												<span class="badge bg-secondary-lt rounded-pill">{{ dashboard_statistics.total_orders_today|default(0) }}</span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
												Total Pendapatan:
												<span class="badge bg-success-lt rounded-pill">Rp.{{ dashboard_statistics.total_revenue_today|number_format(0, ',', '.') }}</span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center py-2"> {# Added py-2 #}
												Pengantaran Tertunda:
												<span class="badge bg-warning-lt rounded-pill">{{ dashboard_statistics.pending_deliveries_today|default(0) }}</span>
											</li>
										</ul>
									{% else %}
										<p class="text-muted">Statistik tidak tersedia.</p>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Modal Add Customer -->
		{% include 'partials/add-customer-modal.html.twig' with {
            'modal_id': 'dashboard-add-modal',
            'button_text': 'Tambah Customer'
        } %}

		<!-- Modal Create New Order -->
		<div class="modal modal-blur fade" id="modal-add-order" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog modal-lg modal-fullscreen-md-down" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Input Pesanan Baru</h5>
						<button type="button" class="btn-close modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>

					<div class="modal-body">
						{% include 'partials/_order_form_partial.html.twig' with { show_submit_button: false } %}
					</div>
					<div class="modal-footer">
						<a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">Batal</a>
						<button type="submit" class="btn btn-primary ms-auto" form="order-form">
							{% include 'svg/check.svg.twig' %}
							Simpan Pesanan
						</button>
					</div>

				</div>
			</div>
		</div>

		<!-- Modal Daftar Antaran -->
		{% include 'partials/delivery-list-modal.html.twig' %}

		{% include 'order-confirmation.html.twig' %}
		{% include 'toast.html.twig' %}
	</div>
{% endblock %}
{% block javascripts %} <script src="/js/awesomplete.min.js"></script>
	 <script type="module" src="/js/app/dashboard.js?v={{ 'now'|date('U') }}"></script>
{% endblock %}
